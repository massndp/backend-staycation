 <!-- DataTales Example -->
 <div class="card shadow mb-4">
    <div class="card-header py-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            Add Category
        </button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
               <tbody>
                   <% for(let i = 0; i< category.length; i++){ %> 
                        <tr>
                            <td><%= i + 1 %> </td>
                            <td><%= category[i].name %></td>
                            <td>
                                <a href="javascript:void()" type="button" class="btn btn-warning btn-circle button-update" data-id="<%= category[i].id %>" data-name="<%= category[i].name %>">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="" class="btn btn-danger btn-circle"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    <% } %> 
               </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('add_modal.ejs') %> 
